    <style>

html {
  scroll-behavior: smooth;
}

        .video-container{
  width: 100vw;
  height: 100vh;
}
    
iframe {
  width: 100vw;
  height: 100vh;
  z-index: 1;
}
        /* setup */
        html,
        body,
        .holster {
            height: 100%;
        }

        .holster {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-flow: column nowrap;
            font-family: monospace;
        }

        .hero-banner {
                width: 80%;
                height: auto;
                margin-top: 40vh;
            }

        .containerHolster {
            display: flex;
            overflow: auto;
            outline: 1px dashed lightgray;
            flex: none;
        }

        .containerHolster.y {
            width: 100%;
            height: 100%;
            flex-flow: column nowrap;
        }

        .y.mandatory-scroll-snapping {
            scroll-snap-type: y mandatory;
        }

        .containerHolster > div {
            text-align: center;
            scroll-snap-align: start; /* center */
            flex: none;
        }

        .y.containerHolster > div {
            width: 100%;
            height: 100%;
        }


        .section > h2 {
            color: white;
        }

        .section > p {
            color: white;
        }

        /* footer */

        .footer {
            background-color: black;
            color: white;
            width: 100%;
            height: 100px;
        }

        .footer > p {
            color: white;
        }

        .arrow {
                text-align: center;
                margin: 8% 0;

            }
            
            .bounce {
                -moz-animation: bounce 2s infinite;
                -webkit-animation: bounce 2s infinite;
                animation: bounce 2s infinite;
            }
            
            @keyframes bounce {
                0%, 20%, 50%, 80%, 100% {
                    transform: translateY(0);
                }
                40% {
                    transform: translateY(-30px);
                }
                60% {
                    transform: translateY(-15px);
                }
            }
